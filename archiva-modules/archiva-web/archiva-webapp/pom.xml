              <exclude>src/test/resources/test-repo/**</exclude>
              <exclude>src/test/resources/**</exclude>
              <exclude>src/sql/**</exclude>
            </excludes>
          </configuration>
        </plugin>
      </plugins>
    </pluginManagement>
